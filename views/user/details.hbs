<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{user.fullName}}</h2>
                </header>

                <p>
                    {{user.email}}
                </p>

                <p>
                    {{#each articles}}
                        {{article.title}}
                    {{/each}}

                </p>

                <small class="author">
                    Created by {{article.author.fullName}}
                </small>

            </article>
        </div>
    </div>
</div>
